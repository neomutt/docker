# Create a NeoMutt development environment based on Fedora 39 (rawhide)
FROM fedora:rawhide

RUN	mkdir -p /var/cache/libdnf5 && \
	dnf clean all && \
	dnf -y update && \
	dnf5 install -y \
		ccache \
		clang \
		clang-tools-extra \
		cyrus-sasl-devel \
		docbook-dtds \
		docbook-style-xsl \
		elinks \
		gcc \
		gdbm-devel \
		gettext-devel \
		git \
		gnutls-devel \
		gpgme-devel \
		iwyu \
		jq \
		krb5-devel \
		kyotocabinet-devel \
		libdb-devel \
		libgsasl-devel \
		libidn-devel \
		libtdb-devel \
		libxslt \
		libzstd-devel \
		lmdb-devel \
		lua \
		lua-devel \
		lynx \
		lz4-devel \
		ncurses-devel \
		notmuch-devel \
		openssl-devel \
		pcre2-devel \
		qdbm-devel \
		redhat-rpm-config \
		rocksdb-devel \
		slang-devel \
		sqlite \
		sqlite-devel \
		tar \
		tcl \
		tokyocabinet-devel \
		w3m

